<div align="center">
  <div class="sm-container" style="width: 40%;">
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="mt-3">
          <h1 align="center" style="margin-bottom: 30px;">Attendence</h1>
        </div>
          <div align="center">
            <%= form_tag(user_attendence_attendences_path, method: :get, remote: :true) do %>
              <b>Email: </b>
              <%= email_field_tag :email, "", html: {autocomplete: 'disabled'}, :placeholder => "Email", :style => "width: 75%; margin-left: 6%;", required: true %>
              <br>
              <b>Passcode: </b>
              <%= text_field_tag :passcode, "", :placeholder => "Passcode", :style => "width: 75%;", required: true %>
              <br>
              <b>Remark: </b>
              <%= text_field_tag :remark, "", :placeholder => "Remark", :style => "width: 75%; margin-left: 3%;" %>

              <%= submit_tag ("Mark"), :style => "width: 90px; margin: 10px 0px 0px 30px;", :class => "btn btn-success" %>
            <% end %>
          </div>

          <%= link_to 'Back', :back, class: "btn btn-dark" %>
      </div>
    </div>
  </div>
</div>
