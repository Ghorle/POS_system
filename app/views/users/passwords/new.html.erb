<div class="row justify-content-center">
  <div class="col-5" style="margin-top: 4%; background-color: #adadad; padding: 3rem; border-radius: 10px">
    <h1 align="center" style="margin-bottom: 30px;">Send Password Reset Instructions</h1>
    <div style="margin: 3% 10% 5% 10%;">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <b><%= f.label :email, class: "required-field", :style => "margin: 10px 0px 0px 10px;" %></b>
          <%= f.email_field :email, :required => true, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions" align="center" style="margin: 10px 0px 10px 0px;">
          <%= f.submit "reset password", class: 'btn btn-success', style: "width: 30%;" %>
        </div>
      <% end %>
    </div>
    <%= render "users/shared/links" %>
  </div>
</div>