<div class="row justify-content-center">
  <div class="col-5" style="margin-top: 4%; background-color: #adadad; padding: 3rem; border-radius: 10px">
    <h1 align="center" style="margin-bottom: 30px;">Edit Profile</h1>
    <div style="margin: 3% 5% 3% 5%;">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="field" align="center">
          <% if f.object.profile.present? %>
            <%= image_tag f.object.profile, :style => "width: 50%; height: 14vw; border: 1px solid; border-radius: 50%; object-fit: cover; display: block;" %>
          <% else%>
            <%= image_tag ('/user-placeholder.png'), :style => "width: 50%; border: 1px solid; border-radius: 50%;" %>
          <% end %>
        </div>
        <b><%= f.label :profile, "Profile Picture", :style => "margin: 0px 5px 0px 10px;" %></b>
        <%= f.file_field :profile, class: "form-control", :style => "width: 50%; margin-top: 5px;", title: "Profile Picture" %>

        <b><%= f.label :email, :style => "margin: 10px 5px 0px 10px;" %></b>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", :disabled => true %>
        
        <b><%= f.label :name, :style => "margin: 10px 5px 0px 10px;" %></b>
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>

        <b><%= f.label :passcode, :style => "margin: 10px 5px 0px 10px;" %></b>
        <%= f.text_field :passcode, class: "form-control", autofocus: true, autocomplete: "passcode" %>

        <b><%= f.label :current_password, :style => "margin: 10px 5px 0px 10px;" %></b>
        <%= f.password_field :current_password, class: "form-control", autofocus: true, autocomplete: "current-password", :style => "width: 47%;" %>

        <div class="row">
          <div class="col-6">
            <b><%= f.label :password, "New Password", :style => "margin: 10px 5px 0px 10px;" %></b>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="col-6">
            <b><%= f.label :password_confirmation, "Confirm Password", :style => "margin: 10px 5px 0px 10px;" %></b>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>

        <div class="actions" style="margin: 10px 10px 10px 10px;">
          <%= f.submit "Update", class: 'btn btn-success', style: "width: 20%;" %>
        </div>
      <% end %>
      <%= link_to "Back", :back, class: "btn btn-dark" %>
    </div>
  </div>
</div>
