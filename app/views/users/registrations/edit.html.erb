<div align="center">
  <div class="sm-container" style="width: 40%">
    <div class="row justify-content-center">
      <div class="col-10">
        <h1 align="center">Edit Profile</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="field" align="center">
            <% if f.object.profile.present? %>
              <%= image_tag f.object.profile, :style => "width: 55%; border: 1px solid; border-radius: 50%;" %>
            <% else%>
              <%= image_tag ('/user-placeholder.png'), :style => "width: 55%; border: 1px solid; border-radius: 50%;" %>
            <% end %>
          </div>
          <b><%= f.label :email, :style => "margin: 10px 5px 0px 10px;" %></b>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :disabled => true, :style => "color: white;" %>
          
          <b><%= f.label :name, :style => "margin: 10px 5px 0px 10px;" %></b>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>

          <b><%= f.label :profile, "Profile Picture", :style => "margin: 10px 5px 0px 10px;" %></b>
          <%= f.file_field :profile, class: "form-control", :style => "width: 50%;margin: 5px 0px 10px 0px;", title: "Profile Picture" %>

          <div class="actions" style="margin: 10px 10px 10px 10px;">
            <%= f.submit "Update", class: 'btn btn-success', style: "width: 20%;" %>
          </div>
        <% end %>

        <%= link_to "Back", :back, class: "btn btn-dark" %>

      </div>
    </div>
  </div>
</div>
