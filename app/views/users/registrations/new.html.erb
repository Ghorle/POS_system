<div class="row justify-content-center">
  <div class="col-5" style="margin-top: 4%; background-color: #adadad; padding: 3rem; border-radius: 10px">
    <h1 align="center" style="margin-bottom: 30px;">Sign up</h1>
    <div style="margin: 3% 5% 3% 5%;">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <b><%= f.label :name, class: "required-field", :style => "margin: 10px 0px 0px 10px;" %></b>
          <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", placeholder: "Name" %>
        </div>
        
        <div class="field">
          <b><%= f.label :email, class: "required-field", :style => "margin: 10px 0px 0px 10px;" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email" %>
        </div>

        <div class="field">
          <b><%= f.label :password, class: "required-field", :style => "margin: 10px 0px 0px 10px;" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "password", placeholder: "Minimum 6 characters" %>
        </div>

        <div class="field">
          <b><%= f.label :password_confirmation, class: "required-field", :style => "margin: 10px 0px 0px 10px;" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "password", placeholder: "Same as Password" %>
        </div>

        <div class="actions" align="center" style="margin-top: 20px;">
          <%= f.submit "Sign up", class: 'btn btn-success', style: "width: 30%;" %>
        </div>
      <% end %>
    </div>
    <%= render "users/shared/links" %>
  </div>
</div>
