<div align="center">
  <div class="sm-container" style="width: 40%">
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="mt-3">
          <h1 align="center" style="margin-bottom: 30px;">Sign up</h1>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field">
            <b><%= f.label :name, class: "required-field", :style => "margin: 10px 0px 0px 10px;" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
          
          <div class="field">
            <b><%= f.label :email, class: "required-field", :style => "margin: 10px 0px 0px 10px;" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <b><%= f.label :password, class: "required-field", :style => "margin: 10px 0px 0px 10px;" %>
            <%= f.password_field :password, autocomplete: "password", placeholder: "Minimum 6 characters" %>
          </div>

          <div class="field">
            <b><%= f.label :password_confirmation, class: "required-field", :style => "margin: 10px 0px 0px 10px;" %>
            <%= f.password_field :password_confirmation, autocomplete: "password" %>
          </div>

          <div class="actions" align="center" style="margin-top: 20px;">
            <%= f.submit "Sign up", class: 'btn btn-success', style: "width: 30%;" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
