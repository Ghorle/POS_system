<h1 style="color: #DFCAA0">
  Employees
</h1>
<span style="float: right;">
  <%= link_to 'Add Employee', add_employee_home_index_path, class: "btn btn-success", style: "font-size: 20px;font-weight: bold;" %>
</span>

<table class="table table-dark table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr style="color: #8D6FD1; text-align: center">
      <th style="width: 100px">Employee ID</th>
      <th style="width: 150px">Employee Name</th>
      <th style="width: 140px">Total Orders Taken Today</th>
      <th style="width: 140px">Total Orders Taken Overall</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr style="text-align: center">
        <td><%= employee.id %></td>
        <td><%= employee.name&.humanize %></td>
        <td><%= employee.my_orders.current_days.count %></td>
        <td><%= employee.my_orders.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Back', :back, class: "btn btn-outline-danger" %>
