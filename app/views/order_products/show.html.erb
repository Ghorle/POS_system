 <div class="container">
 <div class="row justify-content-center">
    <div class="col-8">
      <div class="mt-3" style="color: #DFCAA0">
        <h1 align="center" style="margin-bottom: 30px; color: #DFCAA0">Order no: <%= @order_product.order_id %></h1>
      </div>
      <p>
        <div class="mb-10 row" style="color: #cdcdcd">
          <div class="col-sm-4 col-form-label">
            <strong>Name:</strong>
            <%= @order_product.name %>
          </div>
          <div class="col-sm-3 col-form-label">
            <strong>Price: </strong>
            <%= @order_product.price&.round(2) %>
          </div>
          <div class="col-sm-3 col-form-label">
            <strong>Quantity: </strong>
            <%= @order_product.qty&.round(2) %>
          </div>
        </div>
        <div class="mb-10 row" style="color: #cdcdcd">
          <div class="col-sm-7 col-form-label">
            <strong>Description:</strong>
            <%= @order_product.description %>
          </div>
          <div class="col-sm-3 col-form-label">
            <strong>Tax: </strong>
            <%= @order_product.tax&.round(2) %>
          </div>
        </div>
      </p>
      <p style="margin-top: 50px;">
        <%= link_to 'Back', order_path(@order_product.order), class: "btn btn-outline-danger" %> | 
        <%= link_to 'Product', product_path(@order_product.product), class: "btn btn-success" %>
      </p>
    </div>
  </div>
</div>

