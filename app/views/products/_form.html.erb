<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> </h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-7">
    <% if form.object.product_images.present? %>
      <%= image_tag form.object.product_images.last, :style => "width: 50%; border: 1px solid; border-radius: 15px" %>
    <% end %>
    <%= form.file_field :product_images, multiple: true, class: "form-control", :style => "margin: 5px 0px 10px 0px;", title: "Product Image" %>
  </div>

  <div class="field">
    <b><%= form.label :name, class: "required-field", :style => "margin: 10px 0px 0px 10px; color: #cdcdcd;" %></b>
    <%= form.text_field :name, :required => true, :style => "background-color: #c5c5c5;" %>
    
    <b><%= form.label :price, class: "required-field", :style => "margin: 10px 0px 0px 10px; color: #cdcdcd;" %></b><br>
    <%= form.number_field :price, :required => true, style: "width: 20%; background-color: #c5c5c5;" %>
  </div>

  <div class="field">
    <b><%= form.label :description, :style => "margin: 10px 0px 0px 10px; color: #cdcdcd;" %></b>
    <%= form.text_field :description, :style => "background-color: #c5c5c5;" %>
  </div>

  <div class="actions" align="center" style="margin: 20px 0px 0px 20px;">
    <%= form.submit class: 'btn btn-success', style: "width: 25%;" %>
  </div>
<% end %>
