<h1 style="color: #DFCAA0">
  Products
</h1>
<span style="float: right;">
  <%= link_to 'New Product', new_product_path, class: "btn btn-success", style: "font-size: 20px;font-weight: bold;" %>
</span>
<div>
  <%= form_tag(products_path, method: :get, remote: :true) do %>
    <%= text_field_tag(:search, params[:search], :placeholder => "Search by ID or Name", :style => "width: 800px") %>
    <%= submit_tag ("Search"), :style => "width: 90px;", :class => "btn btn-success" %>
  <% end %>
</div>
<table class="table table-dark table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr style="color: #8D6FD1; text-align: center">
      <th style="width: 75px;">ID</th>
      <th style="width: 75px">Image</th>
      <th>Name</th>
      <th>Description</th>
      <th style="width: 150px">Price</th>
      <th style="width: 25px"></th>
    </tr>
  </thead>
  <% if @products.present? %>
    <tbody>
      <%= render @products %>
    </tbody>
  <% else %>
    <tbody>
      <tr style="text-align: center">
        <td colspan="6"><b>No Record Found</b></td>
      </tr>
    </tbody>
  <% end %>
</table>

<div class="container pagination justify-content-center">
  <%= paginate @products %>
</div>