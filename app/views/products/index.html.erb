<div style="width: 100%;background-color: #987554; padding: 1rem; border-radius: 10px">
  <div class="row justify-content-center">
    <div class="col-11">
      <h1 align="center" style="margin-bottom: 30px;">Products</h1>
      <span style="float: right;">
        <%= link_to 'New Product', new_product_path, class: "btn btn-success", style: "font-size: 20px;font-weight: bold;margin-bottom: 5px;" %>
      </span>
      <div>
        <%= form_tag(products_path, method: :get, remote: :true) do %>
          <%= text_field_tag(:search, params[:search], :placeholder => "Search by ID or Name",class: "form-control", :style => "width: 800px;height:38px;display: inline-block;") %>
          <%= submit_tag ("Search"), :style => "width: 90px;height:38px;margin: 0px 0px 4px 1px;display: inline-block;", :class => "btn btn-success" %>
        <% end %>
      </div>
      <table class="table table-dark table-striped table-bordered table-hover" >
        <thead>
          <tr style="color: #8D6FD1; text-align: center">
            <th style="width: 5%;">ID</th>
            <th style="width: 5%;">Image</th>
            <th style="width: 16%;">Name</th>
            <th style="width: 32%;">Description</th>
            <th style="width: 7%;">Price</th>
            <th style="width: 0%;"></th>
          </tr>
        </thead>
        <% if @products.present? %>
          <tbody>
            <%= render @products %>
          </tbody>
        <% else %>
          <tbody>
            <tr style="text-align: center">
              <td colspan="6"><b>No Record Found</b></td>
            </tr>
          </tbody>
        <% end %>
      </table>

      <div class="container pagination justify-content-center">
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>