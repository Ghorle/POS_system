 

<h1 style="color: #DFCAA0">
  Orders
</h1>
<span style="float: right;">
  <%= link_to 'New Order', new_order_path, class: "btn btn-success", style: "font-size: 20px;font-weight: bold;margin-bottom: 5px;" %>
</span>
<div>
  <%= form_tag(orders_path, method: :get, remote: :true) do %>
    <%= text_field_tag(:search, params[:search], :placeholder => "Search by ID, Customer Name or Contact", class: "form-control", style: "width: 800px;height:38px;display: inline-block;") %>
    <%= select_tag :sort, options_for_select(@statuses, :selected => params[:sort]), include_blank: "All", class: "form-control", :style => "width: 100px;display: inline-block;" %>
    <%= submit_tag ("Search"), :style => "width: 90px;height:38px;margin: 0px 0px 4px 1px;display: inline-block;", :class => "btn btn-success" %>
  <% end %>
</div>
<table class="table table-dark table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr style="color: #8D6FD1; text-align: center">
      <th style="width: 100px">Order</th>
      <th style="width: 100px">Type</th>
      <th style="width: 100px">Status</th>
      <th>Customer Name</th>
      <th style="width: 160px">Customer Contact</th>
      <th style="width: 150px">Employee Name</th>
      <th style="width: 140px">Total Amount</th>
      <th style="width: 25px"></th>
    </tr>
  </thead>
  <% if @orders.present? %>
    <tbody>
      <%= render @orders %>
    </tbody>
  <% else %>
    <tbody>
      <tr style="text-align: center">
        <td colspan="8"><b>No Record Found</b></td>
      </tr>
    </tbody>
  <% end %>
</table>
<div class="container pagination justify-content-center">
  <%= paginate @orders %>
</div>

