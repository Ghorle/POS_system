 

<h1 style="color: #DFCAA0">
  Orders
  <span style="float: right;">
    <%= link_to 'New Order', new_order_path, class: "btn btn-success", style: "font-size: 20px;font-weight: bold;" %>
  </span>
</h1>

<table class="table table-dark table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr style="color: #8D6FD1">
      <th>Order</th>
      <th>Type</th>
      <th>Status</th>
      <th>Customer Name</th>
      <th>Customer Contact</th>
      <th>Employee Name</th>
      <th>Total Amount</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= render @orders %>
  </tbody>
</table>
<div class="container pagination justify-content-center">
  <%= paginate @orders %>
</div>

