 
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <p>
        <h2 align="center" style="color: #DFCAA0">Order no: <%= @order.id %></h2>
      </p>

      <p>
        <div class="mb-10 row" style="color: #cdcdcd">
          <div class="col-sm-4 col-form-label">
            <strong>Customer Name:</strong>
            <%= @order.customer_name %>
          </div>
          <div class="col-sm-4 col-form-label">
            <strong>Customer Contact:</strong>
            <%= @order.customer_contact %>
          </div>
        </div>
        <div class="mb-10 row" style="color: #cdcdcd">
          <div class="col-sm-4 col-form-label">
            <strong>Employee Name:</strong>
            <%= @order.employee.name %>
          </div>
          <div class="col-sm-4 col-form-label">
            <strong>Order Type:</strong>
            <%= @order.order_type&.humanize %>
          </div>
        </div>
        <br>
      </p>
      <div>
        <table class="table table-dark table-striped table-bordered table-hover">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Tax</th>
              <th>Total</th>
            </tr>
          </thead>

          <tbody>
            <% @order.order_products.each do |product| %>
              <tr>
                <td><%= link_to product.name, product, class: "link-light" %></td>
                <td><%= product.description %></td>
                <td><%= product.price&.round(2) %></td>
                <td><%= product.qty&.round(2) %></td>
                <td><%= product.tax&.round(2) %></td>
                <td><%= ((product.price+product.tax)*product.qty)&.round(2) %></td>
              </tr>
            <% end %>
            <tr>
              <td colspan="4"></td>
              <td><b><%= @order.tax&.round(2) %></b></td>
              <td><b><%= @order.gross_total&.round(2) %></b></td>
            </tr>
            <tr>
              <td colspan="4"></td>
              <td colspan="2" align="center"><b style="color: green; font-size: 22px;"><%= @order.payable_total&.round(2) %></b></td>
            </tr>
          </tbody>
        </table>
      </div>

      <%= link_to 'Edit', edit_order_path(@order), class: "btn btn-warning" %> |
      <%= link_to 'Back', orders_path, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>